{
  "name": "drepublic-erc3664",
  "version": "1.0.0",
  "description": "ERC3664 standard defines NFT attribute extension protocol",
  "scripts": {
    "compile": "truffle compile",
    "test": "truffle test",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:js": "eslint --ignore-path .gitignore .",
    "lint:sol": "solhint 'contracts/**/*.sol' && prettier -c 'contracts/**/*.sol'",
    "lint:fix": "npm run lint:js:fix && npm run lint:sol:fix",
    "lint:js:fix": "eslint --ignore-path .gitignore . --fix",
    "lint:sol:fix": "prettier --write \"contracts/**/*.sol\"",
    "gas-report": "env ENABLE_GAS_REPORT=true npm run test",
    "flatten": "sh flatten.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DRepublic-io/ERC3664.git"
  },
  "author": "support@drepublic.io",
  "license": "MIT",
  "dependencies": {
    "@truffle/hdwallet-provider": "^1.4.0",
    "csv-parse": "^4.16.2",
    "eth-gas-reporter": "^0.2.22",
    "openzeppelin-solidity": "~4.3.1",
    "truffle": "^5.4.8",
    "truffle-assertions": "^0.9.2",
    "truffle-contract-size": "^2.0.1",
    "truffle-flattener": "^1.5.0",
    "truffle-plugin-verify": "^0.5.15",
    "web3": "^1.5.2"
  },
  "engines": {
    "node": "^14.17.x",
    "npm": "^6.14.x"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-mocha-no-only": "^1.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18"
  }
}
